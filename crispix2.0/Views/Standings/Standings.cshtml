
@model crispix2._0.Models.Standings.StandingsLoad

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<HEAD>
    <script src="/includes/crispix.js" language="JavaScript"></script>
    <TITLE>Crispzone Sports</TITLE>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <link rel="stylesheet" href="/crispix/crispix.css" type="text/css" />
</HEAD>
<body>
    <div align="center">
        <table width='100%' border='1' cellspacing='0' cellpadding='0' align='center'>
            <thead align='left' valign='bottom'>
                <tr class='dataRow'>
                    <td><b>Player</b></td>
                    <td><b>Record</b></td>
                    @for (int i = 0; i < Model.weekNames.Count; i++)
                    {
                        <td align='center'><b>@Model.weekNames.ElementAt(i)</b></td>
                    }

                </tr>
            </thead>
            @foreach (var row in Model.StandingsList)
            {
                var nameAndRecord = row.username + "(" + row.record + ")";
                <tr class='dataRow' onMouseOver="this.className='dataRowHili';" onMouseOut="this.className='dataRow';">
                    @if (row.userPaid)
                    {
                        <td>@row.username</td>
                    }
                    else
                    {
                        <td class="redtext">@row.username</td>
                    }

                    <td>@row.record</td>
                    @foreach (var winloss in row.winLoss)
                    {
                        if (!winloss.ToString().Equals("-"))
                        {
                            <td>@winloss</td>
                        }
                    }
                </tr>
            }
        </table>
    </div>
</body>
</html>

